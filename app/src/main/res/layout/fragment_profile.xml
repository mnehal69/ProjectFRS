<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:orientation="vertical"
    android:padding="20sp">


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/NotLogin"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/login"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:contentDescription="@string/login_logo" />
        <TextView
            android:fontFamily="cursive"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="@string/need_something_to_eat"
            android:layout_width="150sp"
            android:layout_height="wrap_content" />
        <TextView
            android:fontFamily="cursive"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="@string/login_now_to_order"
            android:layout_width="150sp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginTop="20sp"
            android:id="@+id/SignIn"
            android:textColor="#fff"
            android:text="@string/login_now"
            android:textStyle="bold"
            android:background="@drawable/main_login"
            android:layout_width="250sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/OnLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ActionBar"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/setting"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/tab"
                >
                <LinearLayout
                    android:id="@+id/done"
                    android:clickable="true"
                    android:background="@drawable/circle_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    >
                    <ImageView
                        android:elevation="8dp"
                        android:src="@drawable/ic_done_black_24dp"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:contentDescription="@string/done" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/profile_menu"
                    android:clickable="true"
                    android:background="@drawable/circle_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true">
                    <ImageView
                        android:src="@drawable/ic_more_vert_24dp"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:contentDescription="@string/done" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="40sp"
            android:id="@+id/SettingImage"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20sp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:clickable="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bartender"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFF"
                android:focusable="true" />
        </LinearLayout>
        <!--Detail row -->
        <ListView
            android:divider="@color/PrimaryText"
            android:layout_below="@+id/SettingImage"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

<!--SWITCH TOGGLE-->
        <LinearLayout
            android:layout_marginBottom="30sp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="20sp"
            android:paddingStart="20sp"
            android:paddingEnd="0sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/PrimaryText"
                android:text="@string/night_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Switch
                android:theme="@style/ToggleSwitchTheme"
                android:id="@+id/simpleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>