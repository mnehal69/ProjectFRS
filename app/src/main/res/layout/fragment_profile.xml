<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".Profile">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/NotLogin"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/SignIn"
            android:textColor="#fff"
            android:text="@string/login_now"
            android:textStyle="bold"
            android:background="@drawable/main_login"
            android:layout_width="250sp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <!--first -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:src="@drawable/logo"
                android:layout_width="70sp"
                android:layout_height="70sp" />
            <TextView
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#fff"
                android:text="@string/dummy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="20sp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/Card"
                android:text="@string/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:text="@string/dummy_name_com"
                android:textColor="@color/PrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <!--second-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="20sp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="20sp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/Card"
                    android:text="@string/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:text="@string/d_no_8_d_street_dummy_opposite_dummy_lahore"
                    android:textColor="@color/PrimaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



         <!--third-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="20sp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginStart="20sp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/Card"
                        android:text="Phone No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:text="+92-3345692-0"
                        android:textColor="@color/PrimaryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>



        <!--logout-->
        <LinearLayout
            android:layout_marginTop="15sp"
            android:visibility="visible"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:backgroundTint="@color/Card"
                android:background="@drawable/button"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="@string/logout"
                android:id="@+id/SignOut"
                android:layout_width="200sp"
                android:layout_height="60sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>