<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword"
    android:orientation="vertical"
    >
    <ImageButton
        android:id="@+id/close_btn"
        android:background="@drawable/menu_btn"
        android:src="@drawable/ic_arrow_back"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:contentDescription="@string/close_icon"
        android:layout_marginStart="20sp" />
    <TextView
        android:layout_marginTop="10sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"/>
    <LinearLayout
        android:layout_marginTop="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="20sp"
        android:paddingRight="20sp">
        <LinearLayout
            android:id="@+id/EmailView"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/FEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:focusableInTouchMode="true"
            android:hint="@string/email"
            android:textColorHint="@color/Card"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">
            <EditText
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/Card"
                android:textSize="15sp"
                android:textColor="@color/PrimaryText"
                android:textColorHint="@color/Card"
                android:textStyle="bold"
                android:id="@+id/FEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingStart="20sp"
                android:paddingEnd="0sp"
                />
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/CodeView"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/FCodeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:focusableInTouchMode="true"
            android:hint="@string/code"
            android:textColorHint="@color/Card"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">
            <EditText
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/Card"
                android:textSize="15sp"
                android:textColor="@color/PrimaryText"
                android:textColorHint="@color/Card"
                android:textStyle="bold"
                android:id="@+id/FCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingStart="20sp"
                android:paddingEnd="0sp"
                />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_gravity="start"
            android:id="@+id/ForgetPass"
            android:background="@drawable/dashed_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/this_code_is_send_to_your_email_address"
            android:textColor="@color/Card"
            android:textIsSelectable="false"
            android:textStyle="normal"
            android:textSize="12sp"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/FPassView"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/FPassLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:focusableInTouchMode="true"
                android:hint="@string/password"
                android:textColorHint="@color/Card"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">
                <EditText
                    android:inputType="textPassword"
                    android:backgroundTint="@color/Card"
                    android:textSize="15sp"
                    android:textColor="@color/PrimaryText"
                    android:textColorHint="@color/Card"
                    android:textStyle="bold"
                    android:id="@+id/FPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingStart="20sp"
                    android:paddingEnd="0sp"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/FConfirmPassPassLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:focusableInTouchMode="true"
                android:hint="@string/confirm_password"
                android:textColorHint="@color/Card"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">
                <EditText
                    android:inputType="textPassword"
                    android:backgroundTint="@color/Card"
                    android:textSize="15sp"
                    android:textColor="@color/PrimaryText"
                    android:textColorHint="@color/Card"
                    android:textStyle="bold"
                    android:id="@+id/FConfirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingStart="20sp"
                    android:paddingEnd="0sp"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <Button
            android:background="@drawable/login_button"
            android:layout_marginTop="50sp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:textSize="15sp"
            android:id="@+id/Check"
            android:backgroundTint="@color/Card"
            android:text="@string/check"/>
    </LinearLayout>
</LinearLayout>